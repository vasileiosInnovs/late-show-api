{
  "info": {
    "name": "Flask JWT API Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5555/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5555",
          "path": ["register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5555/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5555",
          "path": ["login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.collectionVariables.set(\"jwt\", json.access_token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Check Session",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5555/check_session",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5555",
          "path": ["check_session"]
        }
      }
    },
    {
      "name": "Post Appearance",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"rating\": 9.5,\n    \"guest_id\": 1,\n    \"episode_id\": 1\n}"
        },
        "url": {
          "raw": "http://localhost:5555/appearances",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5555",
          "path": ["appearances"]
        }
      }
    },
    {
      "name": "Delete Episode",
      "request": {
        "method": "DELETE",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"}
        ],
        "url": {
          "raw": "http://localhost:5555/episodes/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5555",
          "path": ["episodes", "1"]
        }
      }
    }
  ]
}
